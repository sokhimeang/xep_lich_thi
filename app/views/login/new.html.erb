<% provide :title, t("log") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :code %>
      <%= f.text_field :code, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <br><%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
