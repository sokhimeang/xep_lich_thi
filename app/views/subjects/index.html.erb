<%= form_tag(subjects_path, method: :get) do %>
  <%= text_field_tag :term, params[:term], class: "col-md-7 mb-2" %>
  <%= submit_tag "Search", name: nil, class: "mb-2 bg-primary" %>
<% end %>

<% @subjects.each do |subject| %>
  <div>
    <%= subject.code %>
    | <%= link_to subject.name, subject %>
    | <%= subject.exam_during %>
    | <%= link_to t("edit"), "/subjects/#{subject.id}/edit" %>
    | <%= link_to t("delete"), subject, method: :delete,
      data: {confirm: t("sure") }%>
  </div>
<% end %>

<%= will_paginate @subjects,
 renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
