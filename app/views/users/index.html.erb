<% provide :title, t(".users") %>
<div class="row">
  <%= form_tag(users_path, method: :get) do %>
    <%= text_field_tag :term, params[:term], class: "col-md-7 mb-2" %>
    <%= submit_tag t("search"), name: nil, class: "mb-2 bg-primary" %>
  <% end %>
</div>

<% @users.each do |user| %>
  <div><%= user.code %>:
    <%= link_to user.name, user %>
    | <%= link_to t("edit"), "/users/#{user.id}/edit" %>
    | <%= link_to t("delete"), user, method: :delete,
      data: { confirm: t("sure") } %>
    <br><strong>Image:</strong>
    <%= image_tag user.image.thumb.url, class: "default_avatar" %>
  </div>
  <hr align="left" width="50%">
<% end %>

<%= will_paginate @users,
  renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
