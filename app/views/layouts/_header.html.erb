
<div class="row">
  <%= link_to root_path do %>
     <%= image_tag "logo.jpeg", class: "logoImg" %>
  <% end %>
  <div class="col mb-2 round-mn">
    <ul class="nav">
      <li class="nav-item my-bg">
        <%= link_to t(".home"), root_url, class: "nav-link my-li" %>
      </li>
      <li class="nav-item my-bg">
        <%= link_to t(".contact"), contact_url, class: "nav-link my-li" %>
      </li>
    </ul>
  </div>

  <div class="col mb-2 m-account">
    <ul class="nav justify-content-end">
      <% unless logged_in? %>
        <li class="nav-item">
          <%= link_to t(".log_in"), login_path, class: "nav-link bg-dark text-white" %>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <%=  link_to t(".account"), "#", class: "nav-link dropdown-toggle
          bg-primary text-white", data: { toggle: "dropdown"} %>
          <div class="dropdown-menu dropdown-menu-right bg-success">
            <%= link_to t(".profile"), current_user, class: "dropdown-item bg-success" %>
            <%= link_to t(".settings"), edit_user_path(current_user), class: "dropdown-item bg-success" %>
            <div class="dropdown-divider"></div>
            <%= link_to t(".logout"), logout_path, method: :delete, class: "dropdown-item bg-warning text-dark" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

